  "devDependencies": {
    "gulp": "^4.0.2",
    "husky": "^3.0.0",
    "jasmine-core": "^3.4.0",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-jasmine": "^2.0.1",
